https://school.programmers.co.kr/learn/courses/30/lessons/12903

class Solution {
    public String solution(String s) {
        String answer = "";
        
        //짝수
        if(s.length() % 2 == 0) {
            answer += s.charAt(s.length()/2-1);
            answer += s.charAt(s.length()/2);
        }
        //홀수
        else {
            answer += s.charAt(s.length() / 2) + "";
        }
        
        return answer;
    }
}
